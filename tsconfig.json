{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",  // Changed from ES2022 to NodeNext
    "moduleResolution": "NodeNext",
    "rootDir": "server",
    "outDir": "./dist",
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts"]
}